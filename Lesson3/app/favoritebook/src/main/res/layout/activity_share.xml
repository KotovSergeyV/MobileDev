<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">


    <TextView
        android:id="@+id/textViewBookRecieve"
        android:layout_width="176dp"
        android:layout_height="56dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBookRecieve2"
        android:layout_width="176dp"
        android:layout_height="56dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="144dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="358dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Введите название Вашей любимой книги"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookRecieve" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="356dp"
        android:layout_height="79dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:hint="Введите цитату"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBookRecieve" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="65dp"
        android:text="Send info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />


</androidx.constraintlayout.widget.ConstraintLayout>